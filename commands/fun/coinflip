module.exports = {
  name: 'coinflip',
  description: 'Flip a coin',
  execute: async (sock, m, args, { from }) => {
    const results = ['Heads', 'Tails'];
    const result = results[Math.floor(Math.random() * results.length)];
    const emoji = result === 'Heads' ? 'ğŸ‘‘' : 'âš¡';
    await sock.sendMessage(from, { 
      text: `ğŸª™ *Coin Flip Result:*\n\n${emoji} **${result}**\n\nThe coin has spoken with absolute certainty and mathematical randomness!` 
    }, { quoted: m });
  }
};
